template(name="dateBadge")
  if canModifyCard
    a.js-edit-date.card-date(title="{{showTitle}}" class="{{classes}}")
      time(class="{{timeClasses}}" datetime="{{showISODate}}")
        span.prefix.sr-only.sr-only-focusable
        span.visualDate {{showDate}}
        span.suffix.sr-only.sr-only-focusable
  else
    a.card-date(title="{{showTitle}}" class="{{classes}}")
      time(class="{{timeClasses}}" datetime="{{showISODate}}")
        span.prefix.sr-only.sr-only-focusable
        span.visualDate {{showDate}}
        span.suffix.sr-only.sr-only-focusable

